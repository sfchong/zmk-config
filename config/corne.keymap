#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define BASE 0
#define NAV 1
#define NUMBER 2
#define SYMBOL 3
#define SYSTEM 4
#define ALTAB 5

/ {
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick_tap_ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };

        ltr: layer_tap_release{
            compatible = "zmk,behavior-hold-tap";
            label = "layer_tap_release";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&nav_altab>, <&kp>;
        };
    };

    macros {
        altab: alt_tab_enter {
            label = "alt_tab_enter";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <10>;
            tap-ms = <20>;
            bindings =
                <&macro_press &kp LGUI>,
                <&macro_tap &kp TAB &to ALTAB>;
        };
        altab_x: alt_tab_leave {
            label = "alt_tab_leave";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <10>;
            tap-ms = <20>;
            bindings =
                <&macro_release &kp LGUI>,
                <&macro_tap &to 0>;
        };
        nav_altab: nav_altab {
            compatible = "zmk,behavior-macro";
            label = "nav_alt_tab";
            #binding-cells = <0>;
            wait-ms = <0>;
            tap-ms = <0>;
            bindings = <&macro_press &mo NAV>
                     , <&macro_pause_for_release>
                     , <&macro_release &kp LGUI>
                     , <&macro_tap &to BASE>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
// -----------------------------------------------------------------------------------------
// |  Q  |  W  |  F  |  P  |  G  |   |  J  |  L   |  U  |  Y  |     |
// |  A  |  R  |  S  |  T  |  D  |   |  H  |  N   |  E  |  I  |  O  |
// |  Z  |  X  |  C  |  V  |  B  |   |  K  |  M   |  ,  |  .  |  /  |
//             | GUI | SPC | ESC |   | ENT | BSPC | SHFT|
            display-name = "base";
            bindings = <
   &none  &kp Q        &kp W        &kp F       &kp P       &kp G      &kp J  &kp L       &kp U       &kp Y        &none        &none
   &none  &hm LSHFT A  &hm LCTRL R  &hm LALT S  &hm LGUI T  &kp D      &kp H  &hm RGUI N  &hm RALT E  &hm RCTRL I  &hm RSHFT O  &none
   &none  &kp Z        &kp X        &kp C       &kp V       &kp B      &kp K  &kp M       &kp COMMA   &kp DOT      &kp FSLH     &none
                             &none  &lt NAV SPACE  &lt NUMBER ESC      &lt SYSTEM RET  &lt SYMBOL BSPC  &sk LSHIFT
            >;
        };

        nav_layer {
            display-name = "nav";
            bindings = <
   &none  &kp LG(GRAVE)  &altab  &none     &none       &none      &kp TAB   &kp PG_DN &kp PG_UP  &kp HOME  &none  &none
   &none  &kp LSHFT  &kp LCTRL  &kp LALT    &kp LGUI    &none      &kp LEFT  &kp DOWN  &kp UP     &kp RIGHT &none  &none
   &none  &kp K_UNDO &kp K_CUT  &kp K_COPY  &kp K_PASTE &none      &none     &none     &none      &kp END   &none  &none
                                          &none  &none  &none      &none  &none  &none
            >;
        };

        num_layer {
            display-name = "number";
            bindings = <
   &none  &none      &none      &none       &none     &none      &none      &kp N7  &kp N8  &kp N9  &none  &none
   &none  &kp LSHFT  &kp LCTRL  &kp LALT    &kp LGUI  &none      &kp GRAVE  &kp N4  &kp N5  &kp N6  &none  &none
   &none  &none      &none      &none       &none     &none      &kp N0     &kp N1  &kp N2  &kp N3  &none  &none
                                        &none  &none  &none      &none  &none  &none
            >;
        };

        sym_layer {
            display-name = "symbol";
            bindings = <
   &none  &kp EXCL  &kp AT     &kp HASH   &kp DLLR  &kp LBKT      &kp RBKT  &kp AMPS   &kp ASTRK  &kp PIPE  &kp BSLH  &none
   &none  &kp TILDE &kp QMARK  &kp COLON  &hm LGUI SEMI  &kp LPAR      &kp RPAR  &kp EQUAL  &kp SQT    &kp DQT    &kp FSLH  &none
   &none  &kp UNDER &kp GRAVE  &kp LT     &kp GT    &kp LBRC      &kp RBRC  &kp MINUS  &kp PLUS   &kp PRCNT  &kp CARET  &none
                                         &none  &none  &none      &none  &none  &none
            >;
        };

        sys_layer {
            display-name = "system";
            bindings = <
   &none  &kp F1     &kp F2     &kp F3    &kp F4    &kp F5     &kp F6  &kp F7  &kp F8  &kp F9  &kp F10  &none
   &none  &kp LSHFT  &kp LCTRL  &kp LALT  &kp LGUI  &none      &none    &kp RGUI  &kp RALT  &kp RCTRL     &kp RSHFT  &none
   &none  &none      &none      &none     &none     &none      &kp F11  &kp F12  &kp K_MUTE &kp K_VOL_DN  &kp K_VOL_UP  &none
                                      &none  &none  &none      &none  &none  &none
            >;
        };

        altab_layer {
            display-name = "alt tab";
            bindings = <
    &none  &altab_x  &kp TAB  &altab_x  &altab_x  &altab_x      &altab_x  &altab_x  &altab_x  &altab_x  &altab_x  &none
    &none  &altab_x  &altab_x  &altab_x  &altab_x  &altab_x      &kp LEFT  &kp DOWN  &kp UP  &kp RIGHT  &altab_x  &none
    &none  &altab_x  &altab_x  &altab_x  &altab_x  &altab_x      &altab_x  &altab_x  &altab_x  &altab_x  &altab_x  &none
                               &altab_x  &altab_x  &altab_x      &altab_x    &altab_x   &altab_x

            >;

        };
    };
};
